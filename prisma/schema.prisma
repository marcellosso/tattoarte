// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Generation {
  id          String   @id @default(cuid())
  prompt      String
  style       String
  image_name  String
  is_hd       Boolean? @default(false)
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @updatedAt @map(name: "updated_at")
  author      User     @relation(fields: [authorId], references: [id])
  authorName  String   @map(name: "author_name")
  authorId    String
  is_favorite Boolean? @default(false)
  is_private  Boolean? @default(false)

  @@index([authorId])
  @@map(name: "generations")
}

model User {
  id                   String       @id @default(cuid())
  name                 String?
  email                String?      @unique
  subscribed           Boolean?     @default(false)
  subscriptionAt       DateTime?    @map(name: "subscribed_at")
  subscriptionDuration Int?         @default(0)
  credits              Int?         @default(3)
  generationCount      Int?         @default(0)
  freeTrial            Boolean?     @default(true)
  stripeId             String       @unique
  createdAt            DateTime     @default(now()) @map(name: "created_at")
  updatedAt            DateTime     @updatedAt @map(name: "updated_at")
  Generation           Generation[]

  @@map(name: "users")
}
